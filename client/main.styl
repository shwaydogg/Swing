#react-root
  max-width 600px
  margin auto
main
  font-size 1.3em
h1
  text-align center
  font-size 3em
  margin-top 2em
li
  list-style none
ul
  padding 0
li ul
  padding-left 1.5em
  border-left .2em solid grey
  font-size .9em
button
  margin-right 5px
.item
  margin-top 20px
  list-style none
  .title
    margin 5px 0 0 0
  .content
    margin 5px 0
    padding 3px
  .mediumEdit
    border 1px solid #BC
    display inline-block
    min-width 125px
  .medium-editor-hidden
    display none
  label
    margin 5px 0 -5px 0
    display block
aside.id
  display inline
  font-size 1rem


#login-buttons
  position: fixed;
  top 0
  right 0
  //Setup login/signup on right side:
  width 100%
  //position relative
  div
    padding .5em
    background-color white
  .login-link-and-dropdown-list
    position absolute
    right 0
  #login-dropdown-list
    position: absolute;
    right 0
    left initial //clear the left -1px
  .login-close-text
    float right
  

